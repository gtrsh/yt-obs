generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id       String  @id @default(uuid(7)) @db.Uuid
  role     Role    @default(USER)
  name     String  @unique
  email    String? @unique
  password String

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("user")
}

model Channel {
  id  String @id @default(uuid(7)) @db.Uuid
  url String @unique

  currentDataId String?      @unique @map("current_data_id") @db.Uuid
  currentData   ChannelData? @relation("CurrentData", fields: [currentDataId], references: [id])

  channelData ChannelData[] @relation("ChannelData")
  channelInfo ChannelInfo?

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("channel")
}

model ChannelInfo {
  id   String @id @default(uuid(7)) @db.Uuid
  info Json?  @db.JsonB

  channelId String  @unique @map("channel_id") @db.Uuid
  channel   Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("channel_info")
}

model ChannelData {
  id           String  @id @default(uuid(7)) @db.Uuid
  data         Json?   @db.JsonB
  playlistType String? @map("playlist_type")

  channelId String  @map("channel_id") @db.Uuid
  channel   Channel @relation("ChannelData", fields: [channelId], references: [id], onDelete: Cascade)

  currentForChannel Channel? @relation("CurrentData")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("channel_data")
}
